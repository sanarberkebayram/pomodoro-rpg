{
  "name": "pomodoro-rpg",
  "version": "0.1.0",
  "description": "Pomodoro MMORPG - Transform focus time into an idle RPG adventure",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "solid-js": "^1.8.22"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "^2.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
